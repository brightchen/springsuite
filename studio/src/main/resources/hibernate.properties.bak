#The org.apache.commons.dbcp.BasicDataSource will use properties from this file.
#and getConnection(String user, String pass) will be invoked which is not supported.
hibernate.connection.driver_class=org.apache.derby.jdbc.EmbeddedDriver
hibernate.connection.url=jdbc:derby:${basedir}/target/general-derby;create=true
hibernate.connection.username=sa
hibernate.connection.password= 

hibernate.c3p0.min_size=5
hibernate.c3p0.max_size=20
hibernate.c3p0.timeout=1800
hibernate.c3p0.max_statements=50
hibernate.dialect=org.hibernate.dialect.DerbyDialect