<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

  <!-- system properties will override the buildin properties -->
  <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE" />

    <property name="locations">
      <list>
        <value>classpath:my/bc/studio/studio-persistent.properties</value>
      </list>
    </property>
    <property name="ignoreUnresolvablePlaceholders" value="false" />
  </bean>

  <context:annotation-config />
  <context:component-scan base-package="com.fortinet.datamigrator, com.fortinet.datamigrator.*" />

</beans>

